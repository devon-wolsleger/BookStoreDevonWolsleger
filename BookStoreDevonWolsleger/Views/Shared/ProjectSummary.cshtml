@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">

    <div class="bg-faded p-1">
        <h4>@Model.Title</h4>

        <span class="badge bg-info" style="float:right">
            <small>Price: @Model.Price.ToString("c")</small>
        </span>

    </div>
    <div class="card-text p-1">Author: @Model.Author <br />Publisher: @Model.Publisher<br />ISBN: @Model.Isbn<br />Category: @Model.Category<br />Classification: @Model.Classification<br />Number of Pages: @Model.PageCount<br /></div>

    <form method="post" asp-page="/Add">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            @* //Changed the class to btn-info to change the color of the button and then added style="color:white" to make the font white *@
            <button type="submit" class="btn btn-info btn-sm float-end" style="color:white">Buy</button>
        </span>

    </form>

</div>



