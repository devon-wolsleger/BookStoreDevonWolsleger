@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>Price: @Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Author: @Model.Author <br />Publisher: @Model.Publisher<br />ISBN: @Model.Isbn<br />Category: @Model.Category<br />Classification: @Model.Classification<br />Number of Pages: @Model.PageCount<br />Price: @Model.Price.ToString("c") </div>
</div>

